<div class="row d-flex justify-content-center mt-5 pt-3">
  <div class="col-md-4">
    <h1>Review <%= @restaurant.name %></h1>
    <hr>
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating %>
      <%= f.submit class: "btn btn-secondary" %>
    <% end %>
  </div>
</div>
