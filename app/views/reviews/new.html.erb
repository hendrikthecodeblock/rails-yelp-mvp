<div class="row d-flex justify-content-center mt-5 pt-3">
  <div class="col-md-4">
  <h1>Review Restaurant</h1>
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating %>
      <%= f.submit class: "btn btn-secondary" %>
    <% end %>
    <%= link_to "Back To Restaurants", restaurants_path %>
  </div>
</div>
