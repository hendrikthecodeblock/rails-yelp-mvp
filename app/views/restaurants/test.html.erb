<div class=" container mt-5 pt-3">
  <h1 class="restaurant_title_centre">Restaurants</h1>
  <hr>
  <div class="container">
    <div class="row row-cols-4 gy-3 d-flex justify-content-evenly">
      <% @restaurants.each do |restaurant| %>
        <div class="card me-3">
          <div class="card-body">
            <h3 class="card-title"><%= restaurant.name %></h3>
            <p><%= link_to "Show this restaurant", restaurant, class:"btn btn-secondary" %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row d-flex justify-content-center mt-5 pt-3">
    <div>
      <h1 class= "restaurant_details_centre">Restaurant Details</h1>
      <hr>
    </div>
  </div>
  <div class="pt-2"><%= render @restaurant %></div>
