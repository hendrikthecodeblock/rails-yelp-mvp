<div class="d-flex flex-column align-items-center">
  <div class="card w-25">
    <div class="card-header">
      <strong><%= restaurant.name %></strong>
    </div>
    <div class="card-body">
      <p class="card-text"><strong>Address:</strong> <%= restaurant.address%></p>
      <p class="card-text"><strong>Phone Number:</strong> <%= restaurant.phone_number %></p>
      <p class="card-text"><strong>Category:</strong> <%= restaurant.category %></p>
      <%= link_to "Add Review", new_restaurant_review_path(@restaurant), class:"btn btn-secondary" %>
    </div>
  </div>
  <% @restaurant.reviews.each do |review| %>
    <div class="card w-25 mt-3">
      <div class="card-header">
        <strong>Review</strong>
      </div>
      <div class="card-body">
        <p class="card-text"><strong>Comments:</strong> <%= review.content%></p>
        <p class="card-text"><strong>Rating:</strong> <%= '⭐️' * review.rating  %></p>
      </div>
    </div>
  <% end %>
</div>
