<div class="d-flex justify-content-center">
<div class="card w-25">
  <div class="card-header">
    <strong><%= restaurant.name %></strong>
  </div>
  <div class="card-body">
    <p class="card-text"><strong>Address:</strong> <%= restaurant.address%></p>
    <p class="card-text"><strong>Phone Number:</strong> <%= restaurant.phone_number %></p>
    <p class="card-text"><strong>Category:</strong> <%= restaurant.category %></p>
    <%= link_to "Add Review", new_restaurant_review_path(@restaurant), class:"btn btn-secondary" %>
  </div>
  </div>
