<div class=" container mt-5 pt-3">
  <h1>Restaurant Details</h1>
  <hr>
</div>


<div class="d-flex flex-column justify-content-center align-items-center ">

<div class="card w-25">
  <div class="card-header">
    <strong><%= @restaurant.name %></strong>
  </div>
  <div class="card-body">
    <p class="card-text"><strong>Address:</strong> <%= @restaurant.address%></p>
    <p class="card-text"><strong>Phone Number:</strong> <%= @restaurant.phone_number %></p>
    <p class="card-text"><strong>Category:</strong> <%= @restaurant.category %></p>
  </div>
</div>

<% @restaurant.reviews.each do |review| %>
  <div class="card w-25 mt-3">
    <div class="card-header">
      <strong>Review</strong>
    </div>
    <div class="card-body">
      <p class="card-text"><strong>Comments:</strong> <%= review.content%></p>
      <p class="card-text"><strong>Rating:</strong> <%= '⭐️' * review.rating  %></p>
    </div>
  </div>
<% end %>

  <%# <div class="row d-flex justify-content-center mt-5 pt-3"> %>
  <div class="col-md-6 col-sm-12 col-lg-3">
    <h4 class="mt-3">Review <%= @restaurant.name %></h4>
    <hr>
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating %>
      <%= f.submit class: "btn btn-secondary" %>
    <% end %>
  </div>

  </div>
