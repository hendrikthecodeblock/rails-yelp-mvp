<div class=" container mt-5 pt-3">
  <h1 class="restaurant_title_centre">Restaurants</h1>
  <hr>
  <div class="container">
    <div class="row gy-3">
      <% @restaurants.each do |restaurant| %>
        <div class="col-lg-3 col-md-3 col-sm-4 col-s-4">
          <div class="card me-3">
            <div class="card-body">
              <h3 class="card-title"><%= restaurant.name %></h3>
              <p><%= link_to "Show this restaurant", restaurant, class:"btn btn-secondary" %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
